<?xml version="1.0" encoding="utf-8"?>
<info.guardianproject.securereaderinterface.views.DownloadView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/grey_light_light"
    android:padding="10dp" >

    <ImageView
        android:id="@+id/ivDownloadIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:longClickable="false"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_load_photo" />

    <TextView
        android:id="@+id/tvDownload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivDownloadIcon"
        android:layout_centerInParent="true"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:longClickable="false"
        android:text="@string/download_epub_hint"
        android:textAppearance="?android:attr/textAppearanceMedium" />
<!--         style="@style/DownloadPlaceholderTextStyle" -->
</info.guardianproject.securereaderinterface.views.DownloadView>